html 
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Scoreboard
    link(href='https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap' rel='stylesheet')
    link(href='/tailwind.css' rel='stylesheet')
  body.flex.items-center.justify-center.flex-col.h-screen.prose.font-press-start.max-w-full.mx-20
    h1.text-primary Scoreboard

    .absolute.top-7.right-7.flex.flex-col
      a(href=challengesUrl).btn.btn-primary Go to challenges
      a(href='/flag').btn.btn-primary.mt-5 Submit a flag

    table.table.max-w-screen-lg
      thead 
        tr 
          th 
          th Username 
          th Score 
          th Last submission 
      tbody 
        each user in users
          tr 
            th= user.position
            th= user.name
            th= user.score
            th= user.lastSubmission
